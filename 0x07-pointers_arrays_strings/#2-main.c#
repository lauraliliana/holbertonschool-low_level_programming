#include "holberton.h"
#include <stdio.h>

/**
 * main - check the code for Holberton School students.
 *
 * Return: Always 0.
 */
int main(void)
{
  char *s = "hello";
  char *f;

  f = _strchr(s, 'l');

  if (f != NULL)
    {
      printf("%s\n", f);
    }
  return (0);
}
#include "holberton.h"
#include <stdio.h>

/**
 * _strchr - locates a character in a string.
 * @s: pointer
 * @c: character to locate
 * Return: a pointer to the first occurrence of the character c
 * in the string s, or NULL if the character is not found.
 */
char *_strchr(char *s, char c)
{
  int i;
  for (i = 0; s[i] != '\0'; i++)
    {
      if (s[i] == c)
	{
      return (&s[i]);
    }
      else if (s[i] == '\0')
	return ('\0');
}
  return (0);
}
#include "holberton.h"
#include <stdio.h>

/**
 * _strchr - locates a character in a string.
 * @s: pointer
 * @c: character to locate
 * Return: a pointer to the first occurrence of the character c
 * in the string s, or NULL if the character is not found.
 */
char *_strchr(char *s, char c)
{
  int i;
  for (i = 0; s[i] != '\0'; i++)
    {
      if (s[i] == c)
	{
	  return (&s[i]);
	}
      else if (s[i] == '\0')
	return ('\0');
    }
  return (0);
}
